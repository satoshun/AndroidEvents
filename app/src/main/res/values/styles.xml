<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarInsetStart">@dimen/keyline_2</item>
        <item name="actionBarIconColor">#fff</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent_2</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title.Event">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Title.EventDetail">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Description">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Description.Event">
        <item name="android:maxLines">3</item>
    </style>

    <style name="Address">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Address.Event">
        <item name="android:singleLine">true</item>
    </style>

    <!-- btn -->
    <style name="Button" parent="android:style/Widget.Button">
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="Button.Flat">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Button.Flat.Red">
        <item name="android:background">@drawable/red_btn</item>
    </style>

</resources>
